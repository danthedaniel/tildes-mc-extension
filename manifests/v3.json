{
  "manifest_version": 3,
  "name": "Tildes MC Status Indicators",
  "version": "1.3.0",
  "description": "Appends BlueMap links to usernames on tildes.net",
  "icons": {
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "300": "icons/icon300.png"
  },
  "host_permissions": [
    "https://tildes.net/*",
    "https://tildes.nore.gg/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://tildes.net/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}